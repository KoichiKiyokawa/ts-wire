{
  "name": "@kiyoshiro/ts-wire",
  "version": "0.0.4",
  "description": "Code-generation based DI, without decorators",
  "repository": {
    "type": "git",
    "url": "https://github.com/KoichiKiyokawa/ts-wire"
  },
  "bin": "dist/cli.js",
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "ts-wire": "tsx src/index.ts",
    "lint": "prettier --write . && eslint --fix . --ignore-path .gitignore",
    "lint:ci": "prettier --check . && eslint . --ignore-path .gitignore",
    "test": "LANG=C vitest",
    "test:coverage": "pnpm test -- --coverage",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "dependency-injection",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@7.27.0",
  "lint-staged": {
    "*.{ts,yml,md,json}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "kleur": "4.1.5",
    "ts-morph": "17.0.1",
    "yargs": "17.6.2"
  },
  "devDependencies": {
    "@types/node": "18.13.0",
    "@types/yargs": "17.0.22",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitest/coverage-c8": "0.28.4",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.1",
    "prettier": "2.8.4",
    "tsx": "3.12.3",
    "typescript": "4.9.5",
    "vitest": "0.28.4"
  }
}
